<%= simple_form_for @dream do |f| %>
  <div class="d-flex justify-content-center">
    <div class="card p-4 shadow-sm mb-4 col-6">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-group mb-3">
        <%= f.input :title, label: "Dream Title" %>
        <%= f.input :description, as: :text, label: "Dream Description" %>
        <%= f.input :category, collection: Dream::CATEGORIES, prompt: "Select a Category" %>
        <%= f.input :price, label: "Dream Price (in â‚¬)", input_html: { min: 0 } %>
        <%= f.input :duration, label: "Duration (in minutes)", input_html: { min: 0 } %>
        <%= f.input :image_url, label: "Image URL" %>
      </div>

      <div class="form-group mb-4 text-end">
        <%= link_to "Back to Index", dreams_path, class: "btn btn-secondary" %>
        <%= f.button :submit, class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>
