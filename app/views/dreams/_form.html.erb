<%= simple_form_for @dream do |f| %>
  <div class="d-flex justify-content-center">
    <div class="card p-4 shadow-sm mb-4 col-12 col-md-10 col-lg-8 dream-form-card">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="row">
        <!-- Left Column -->
        <div class="col-md-6">
          <div class="form-group mb-3">
            <%= f.input :title, label: "Dream Title", input_html: { class: "form-control" } %>
            <%= f.input :category, collection: Dream::CATEGORIES, prompt: "Select a Category", input_html: { class: "form-select" } %>
            <%= f.input :price, label: "Dream Price (in â‚¬)", input_html: { min: 0, class: "form-control" } %>
          </div>
        </div>

        <!-- Right Column -->
        <div class="col-md-6">
          <div class="form-group mb-3">
            <%= f.input :description, as: :text, label: "Dream Description", input_html: { class: "form-control", rows: 5 } %>
            <%= f.input :duration, label: "Duration (in minutes)", input_html: { min: 0, class: "form-control" } %>
            <%= f.input :photo, as: :file, input_html: { class: "form-control" } %>
            <%# <%= f.input :image_url, label: "Image URL", input_html: { class: "form-control" } %>
          </div>
        </div>
      </div>

      <div class="form-group mb-4 text-end">
        <%= link_to "Back", dreams_path, class: "btn btn-secondary filter-btn-clear" %>
        <%= f.button :submit, class: "btn filter-btn" %>
      </div>
    </div>
  </div>
<% end %>
