<%= simple_form_for [dream, booking], url: dream_bookings_path(dream), html: { class: "needs-validation" } do |f| %>
  <div class="card shadow p-4 mb-4 mx-auto" style="max-width: 400px;">
    <h4 class="card-title text-primary text-center">Book Your Dream</h4>
    <div class="card-body">
      <!-- Error notifications -->
      <% if f.error_notification || (f.object.errors[:base].present?) %>
        <div class="alert alert-danger">
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        </div>
      <% end %>

      <!-- Form inputs -->
      <div class="form-group mb-3">
        <div class="w-75 mx-auto">
          <%= f.input :start_date,
                      as: :string,
                      input_html: {
                        data: { controller: "datepicker", action: "focus->datepicker#show" },
                        class: "form-control"
                      },
                      label: "Select Date",
                      wrapper_html: { class: "mb-3" } %>
        </div>
      </div>
    </div>

    <!-- Form actions -->
    <div>
      <%= f.button :submit, "Book Now", class: "btn btn-primary w-100" %>
    </div>
  </div>
<% end %>
