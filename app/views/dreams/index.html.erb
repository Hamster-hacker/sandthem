<div class="background">

  <div class="row mx-3">
    <% @dreams.each do |dream| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 border-0" style="overflow: hidden; background-color: rgba(0,0,0,0);">

          <%= link_to dream, style: "color: inherit; text-decoration: none;" do %>
            <div class="card-category image" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.3)), url('<%= dream.photo.attached? ? cl_image_path(dream.photo.key) :asset_path(dream.image_url)%>')">
              <%= dream.title %>
            </div>
          <% end %>

          <%= link_to "Show this dream", dream, class: "btn btn-primary", style: "z-index: 1;" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
