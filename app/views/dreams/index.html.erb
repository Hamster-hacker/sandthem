            <div class="card h-100 border-0" style="overflow: hidden; background-color: rgba(0,0,0,0);" > <!-- Use h-100 to ensure cards take full height -->
              <%= link_to dream do %>
                <div class="card-category image" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.3)), url('<%= dream.image_url %>')">
                  <%= dream.title %>
                </div>
              <% end %>
                <%= link_to "Show this dream", dream, class: "btn btn-primary", style: "z-index: 1;" %>
              </div>
            </div>
      <% end %>
