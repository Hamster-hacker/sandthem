<h2>Add a Review</h2>
<%= form_with model: [@dream, @review], local: true do |form| %>
  <div class="mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :rating %>
    <%= form.number_field :rating, in: 0..5, step: 0.1, class: "form-control" %>
  </div>

  <%= form.submit "Submit Review", class: "btn btn-primary" %>
<% end %>
