<h2 class="text-center text-light" style="font-family: Alice;">Edit <%= resource_name.to_s.humanize %></h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="d-flex justify-content-center">
    <div class="card p-4 shadow-sm mb-4 col-12 col-md-10 col-lg-8 dream-form-card">
      <%= f.error_notification %>

      <div class="row">
        <!-- Left Column -->
        <div class="col-md-6">
          <div class="form-group mb-3">
            <%= f.input :email, required: true, autofocus: true, input_html: { class: "form-control" } %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.input :username,
                        required: true,
                        autofocus: true,
                        input_html: { class: "form-control", autocomplete: "username" } %>
          </div>
        </div>

        <!-- Right Column -->
        <div class="col-md-6">
          <div class="form-group mb-3">
            <%= f.input :password,
                        hint: "Optional: Only fill this in if you want to update it.",
                        hint_html: { style: "color: white;" },
                        required: false,
                        input_html: { class: "form-control", autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: false,
                        input_html: { class: "form-control", autocomplete: "new-password" } %>
            <%= f.input :current_password,
                        required: true,
                        input_html: { class: "form-control", autocomplete: "current-password" } %>
          </div>
        </div>
      </div>

      <div class="form-group mb-4 text-end">
        <%= link_to "Back", :back, class: "btn btn-secondary filter-btn-clear" %>
        <%= f.button :submit, "Update", class: "btn filter-btn" %>
      </div>
    </div>
  </div>
<% end %>
